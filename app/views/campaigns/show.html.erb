	<%= render "shared/header" %>
	<%= render "shared/leftnavbar" %>
<div class="content">
  	<!-- Main bar -->
  	<div class="mainbar">
      
	    <!-- Page heading -->
	    <div class="page-head">
	    	<% if flash[:success] %>
				<p><%= flash[:success]%></p>
			<% elsif flash[:failure] %>
				<p><%= flash[:failure] %></p>
			<% end %>
        <!-- Page heading -->
	      <h2 class="pull-left"><%= @company.username %> 

          <!-- page meta -->
          <span class="page-meta">Dashboard for campaign from <%= @campaign.start.to_formatted_s(:long)  %> through <%= @campaign.end.to_formatted_s(:long) %></span>
        </h2>


        <div class="clearfix"></div>

	    </div>
	    <!-- Page heading ends -->



	    <!-- Matter -->

	    <div class="matter">
        <div class="container-fluid">

          <!-- Today status. jQuery Sparkline plugin used. -->

          <div class="row-fluid">
            <div class="span12"> 
              <!-- List starts -->
              <ul class="today-datas">

               
              </ul> 
            </div>
          </div>

          <!-- Today status ends -->

          <!-- Dashboard Graph starts -->

          <div class="row-fluid">
            <div class="span8">

              <!-- Widget -->
              <div class="widget wviolet">
                <!-- Widget head -->
                <div class="widget-head">
                  <div class="pull-left">Social Actions</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"></a> 
                    <a href="#" class="wclose"></a>
                  </div>
                  <div class="clearfix"></div>
                </div>             

                <!-- Widget content -->
                <div class="widget-content">
                  <div class="padd">

                    <!-- Bar chart (Blue color). jQuery Flot plugin used. -->
                    <%= high_chart("my_id4", @chart)  %>


                  </div>
                </div>
                <!-- Widget ends -->

              </div>
            </div>

            <div class="span4">

              <div class="widget wviolet">

                <div class="widget-head">
                  <div class="pull-left">Campaign Stats</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"></a> 
                    <a href="#" class="wclose"></a>
                  </div>
                  <div class="clearfix"></div>
                </div>             

                <div class="widget-content">
                  <div class="padd">

                    <table class="table table-striped">
                      <tr>
                        <td>Budget: </td>
                        <td><%= number_to_currency(@campaign.budget, :unit => "$") %></td>
                      </tr>
                      <tr>
                        <td>Impressions: </td>
                        <td><%=@campaign.impressions %></td>
                      </tr>
                      <tr>
                        <td>Unique Visitors</td>
                        <td><%= @campaign.unique_visitors %></td>
                      </tr>
                      <tr>
                        <td>Conversion Rate: </td>
                        <td><%=@campaign.conversion_rate %>%</td>
                      </tr>
                      <tr>
                        <td>Participants </td>
                        <td><%=@campaign.participants %></td>
                      </tr>
                      <tr>
                        <td>Total Actions: </td>
                        <td><%=@campaign.total_actions %></td>
                      </tr>
                      <tr>
                        <td>Quoted CPA: </td>
                        <td><%=number_to_currency(@campaign.quoted_cpa, :unit => "$") %></td>
                      </tr>
                      <tr class="success">
                        <td>End CPA: </td>
                        <td><%=number_to_currency(@campaign.end_cpa, :unit => "$") %></td>
                      </tr>
                    </table>
                  </div>
                </div>

              </div>

            </div>
          </div>
          <!-- Dashboard graph ends -->
          <div class="row-fluid">
	           	
	           	<div class="span12">

	              <!-- Widget -->
	              <div class="widget wviolet">
	                <!-- Widget head -->
	                <div class="widget-head">
	                  <div class="pull-left">Price Comparison - Social Actions</div>
	                  <div class="widget-icons pull-right">
	                    <a href="#" class="wminimize"></a> 
	                    <a href="#" class="wclose"></a>
	                  </div>
	                  <div class="clearfix"></div>
	                </div>             

	                <!-- Widget content -->
	                <div class="widget-content">
	                  <div class="padd">

	                    <!-- Bar chart (Blue color). jQuery Flot plugin used. -->
	                    <%= high_chart("my_bar_div2", @bar_comparison) do |c| %>
                        <%= raw "options.tooltip.formatter = function() {return '<b>'+ this.series.name +'</b>: $'+ this.y.toFixed(2) ;}"  %>
                      <%end%>


	                  </div>
	                </div>
	                <!-- Widget ends -->

	              </div>
	            </div>
	           
	      </div>
	      <div class="row-fluid">
	          <div class="span6">

	              <!-- Widget -->
	              <div class="widget wviolet">
	                <!-- Widget head -->
	                <div class="widget-head">
	                  <div class="pull-left">Gender Breakdown</div>
	                  <div class="widget-icons pull-right">
	                    <a href="#" class="wminimize"></a> 
	                    <a href="#" class="wclose"></a>
	                  </div>
	                  <div class="clearfix"></div>
	                </div>             

	                <!-- Widget content -->
	                <div class="widget-content">
	                  <div class="padd">

	                    <!-- Bar chart (Blue color). jQuery Flot plugin used. -->
                      <%= high_chart("my_id_gender", @chart_gender) do |c| %>
                        <%= raw "options.tooltip.formatter = function() {return '<b>'+ this.point.name +'</b>: '+ this.y +' %';}"  %>
                        <%= raw "options.plotOptions.pie.dataLabels.formatter = function() { if (this.y > 5) return this.point.name; }"  %>
                      <% end %>


	                  </div>
	                </div>
	                <!-- Widget ends -->

	              </div>
	            </div>
	           	<div class="span6">

	              <!-- Widget -->
	              <div class="widget wviolet">
	                <!-- Widget head -->
	                <div class="widget-head">
	                  <div class="pull-left">Device Breakdown</div>
	                  <div class="widget-icons pull-right">
	                    <a href="#" class="wminimize"></a> 
	                    <a href="#" class="wclose"></a>
	                  </div>
	                  <div class="clearfix"></div>
	                </div>             

	                <!-- Widget content -->
	                <div class="widget-content">
	                  <div class="padd">

	                    <!-- Bar chart (Blue color). jQuery Flot plugin used. -->
	                    <%= high_chart("my_id5", @chart_device) do |c| %>
                        <%= raw "options.tooltip.formatter = function() {return '<b>'+ this.point.name +'</b>: '+ this.y +' %';}"  %>
                        <%= raw "options.plotOptions.pie.dataLabels.formatter = function() { if (this.y > 5) return this.point.name; }"  %>
                      <% end %>


	                  </div>
	                </div>
	                <!-- Widget ends -->

	              </div>
	            </div>
	      </div>  
        </div>
	</div>

		<!-- Matter ends -->

    </div>

   <!-- Mainbar ends -->	    	
   <div class="clearfix"></div>

</div>
<!-- Content ends -->